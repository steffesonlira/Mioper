<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cadastromioper"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MeusDados">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="147dp"
                android:layout_height="168dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/profile" />

            <!-- Name Label -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColorHint="#FFFFFF">

                <EditText
                    android:id="@+id/txtNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    android:hint="Nome"
                    android:inputType="textPersonName"
                    android:textColor="@color/White"
                    android:textColorHighlight="#C5C1C1"
                    android:textColorHint="#FFFFFF"
                    android:textCursorDrawable="@color/design_default_color_primary_dark" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Address Label -->

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColorHint="#FFFFFF">

                <EditText
                    android:id="@+id/txtEndereco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    android:hint="Endereço Residencial"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/White"
                    android:textColorHighlight="#C5C1C1"
                    android:textCursorDrawable="@color/design_default_color_primary_dark" />
            </com.google.android.material.textfield.TextInputLayout>


            <!--  Email Label -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColorHint="#FFFFFF">

                <EditText
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    android:hint="E-mail"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/White"
                    android:textColorHighlight="#C5C1C1"
                    android:textCursorDrawable="@color/design_default_color_primary_dark" />
            </com.google.android.material.textfield.TextInputLayout>

           <!-- mobile number -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColorHint="#FFFFFF">

                <EditText
                    android:id="@+id/txtCelular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    android:hint="Celular"
                    android:inputType="number"
                    android:textColor="@color/White"
                    android:textColorHighlight="#C5C1C1"
                    android:textCursorDrawable="@color/design_default_color_primary_dark" />
            </com.google.android.material.textfield.TextInputLayout>



            <!-- Data de Nascimento -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColorHint="#FFFFFF">

                <EditText
                    android:id="@+id/txtDataNascimento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    android:hint="Data de Nascimento"
                    android:inputType="date"
                    android:textColor="@color/White"
                    android:textColorHighlight="#C5C1C1"
                    android:textCursorDrawable="@color/design_default_color_primary_dark" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- CPF -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColorHint="#FFFFFF">

                <EditText
                    android:id="@+id/txtCpf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    android:hint="CPF"
                    android:inputType="number"
                    android:textColor="@color/White"
                    android:textColorHighlight="#C5C1C1"
                    android:textCursorDrawable="@color/design_default_color_primary_dark" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Gênero -->

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/White"
                android:text="Masculino / Feminino" />

            <Switch
                android:id="@+id/switchGenero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_weight="1" />

            <!-- Botão Salvar Alterações -->
            <Button
                android:id="@+id/btnSalvarAlteracoes"
                android:layout_width="380dp"
                android:background="@color/Blue"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="salvarAlteracoes"
                android:textColorHighlight="#C5C1C1"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@color/design_default_color_primary_dark"
                android:text="Salvar Alterações" />

            <!-- Botão Alterar Senha -->
            <Button
                android:id="@+id/btnAlterarSenha"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/White"
                android:onClick="alterarSenhaUsuario"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="@color/Blue_escuro"
                android:text="Alterar Senha" />

            <Button
                android:id="@+id/btnExcluirConta"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="excluirUsuario"
                android:background="@color/Red"
                android:text="Excluir Conta" />

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>