<?xml version="1.0" encoding="utf-8"?>


<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/num_cartao_label" />



            <com.santalu.maskedittext.MaskEditText
                android:id="@+id/numeroCartaoID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/num_cartao_mask_hint"
                app:met_mask="#### #### #### ####"
                android:inputType="number"
                android:imeOptions="actionNext"/>

            <Spinner
                android:id="@+id/paisesCadastradosID"
                android:layout_width="match_parent"
                android:layout_height="39dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/data_venc_label" />

                    <com.santalu.maskedittext.MaskEditText
                        android:id="@+id/dataVencimentoCartaoID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/data_venc_mask_hint"
                        android:inputType="number"
                        app:met_mask="##/##"
                        android:imeOptions="actionNext"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/codigo_seg_label" />

                    <com.santalu.maskedittext.MaskEditText
                        android:id="@+id/codigoSegurancaCartaoID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/codigo_seg_mask_hint"
                        android:inputType="number"
                        app:met_mask="###" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/botaoConfirmarCadastroCartaoID"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/botao"
                android:text="@string/confirmar_button"
                android:textColor="@color/White"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="300dp"
                android:src="@drawable/cartao"
                >

            </ImageView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


